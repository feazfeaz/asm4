<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/reuse_movies_linear"
        android:layout_width="@dimen/movies_info_block_width"
        android:layout_height="@dimen/movies_info_block_height"
        android:weightSum="10"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/reuse_imgview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>
        <TextView
            android:id="@+id/reuse_title_movie_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/app_name"
            android:textSize="@dimen/small_text"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/reuse_price_movie_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:textStyle="italic"/>
    </LinearLayout>


</LinearLayout>